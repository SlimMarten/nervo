.aspectRatio{
  position: relative;
  width: 100%;
  padding-bottom: calc(9 / 16 * 100%);
  // border-radius: 0.5rem;
  overflow: hidden;
  // box-shadow: 0px 5px 15px 0px rgba($corporate-color-3,0.1)
}

.canvas{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: $corporate-color-4;
}

.margin{
  border-radius: 8px;
  overflow: hidden;
  position: relative;

  &:not(:last-child){
    margin-bottom: 2.5rem;
  }
}